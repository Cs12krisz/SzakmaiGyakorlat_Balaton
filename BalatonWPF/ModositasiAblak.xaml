<Window x:Class="BalatonWPF.ModositasiAblak"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BalatonWPF"
        mc:Ignorable="d"
        Title="ModositasiAblak" Height="450" Width="300">
    <Grid>
        <StackPanel Orientation="Vertical">
            <Label Content="Adószám"/>
            <TextBox x:Name="tbxAdoSzam"/>
            <Label Content="Utca"/>
            <TextBox x:Name="tbxUtca"/>
            <Label Content="Házszám"/>
            <TextBox x:Name="tbxHazszam"/>
            <Label Content="Adó kategória"/>
            <TextBox x:Name="tbxAdoKategoria"/>
            <Label Content="Terület"/>
            <TextBox x:Name="tbxTerulet"/>
            <Button Content="Módosítás befejezése" Click="Button_Click" Margin="0 20"/>
        </StackPanel>
    </Grid>
</Window>
