<Window x:Class="BalatonWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BalatonWPF"
        mc:Ignorable="d"
        Title="BalatonWPF" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <DataGrid x:Name="dtgTabla" Margin="10" ColumnWidth="*" SelectionChanged="dtgTabla_SelectionChanged"/>
        <ComboBox x:Name="cBoxAdoKategoria" Grid.Column="1" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="40"/>
        <StackPanel  Grid.Column="2">
            <Button x:Name="btnModositas" 
                    Content="Módosítás"
                    HorizontalAlignment="Center"
                    Margin="0 50 0 0" Click="btnModositas_Click"
                    />
            <Button x:Name="btnMentes" 
                    Content="Mentés"
                    HorizontalAlignment="Center"
                    Margin="0 10" Click="btnMentes_Click"
                    />
        </StackPanel>
    </Grid>
</Window>
